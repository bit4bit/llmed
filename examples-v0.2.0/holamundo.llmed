# -*- mode: ruby -*-
set_llm provider: :anthropic, api_key: ENV['ANTHROPIC_API_KEY'], model: 'claude-3-5-sonnet-20240620'

application "hola mundo ruby", release: 1, language: 'ruby', output_file: "holamundo-ruby.ollmed" do
  # More stable context: if this changes, all subsequent context will be recompiled.
  context "variables" do
    <<-LLM
    Variable saludos de valor 'hola mundoa'.
    LLM
  end

  # More inestable context: if this changes, only this context will be recompiled.
  context "main" do
    <<-LLM
    Mostrar al usuario la variable saludos.
    Mostrar al usuario la hora en curso.
    LLM
  end
end

